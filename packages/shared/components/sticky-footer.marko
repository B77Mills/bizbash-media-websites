$ const { site } = out.global;
$ const footerItems = site.getAsArray('navigation.sticky-footer.items');

<div class="sticky-footer sticky-footer--visible">
  <div class="sticky-footer__container">
    <div class="sticky-footer__background">
      <if(footerItems.length)>
        <ul class="navbar-nav site-footer__items">
          <for|item| of=footerItems>
            <li class="site-footer__item">
              <marko-web-link class="nav-link" href=item.href target=item.target title=item.title>
                ${item.label}
              </marko-web-link>
            </li>
          </for>
        </ul>
      </if>
    </div>
  </div>
</div>
