<default-theme-hero-flow nodes=input.nodes>
  <@hero|{ node }|>
    <global-content-hero-card-node node=node image-ar="3:2" image-width=630 title-modifiers=["large"] />
  </@hero>
  <@list|{ nodes }|>
    <global-content-list-flow nodes=nodes with-teaser=false native-x=input.nativeX />
  </@list>
</default-theme-hero-flow>
